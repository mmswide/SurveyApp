<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<div class ='container col-md-12'>
  <div class="list-group col-md-4">
    <%= link_to('Basic Profile', {}, :class =>'list-group-item active')%>
    <%= link_to('Promotor', {}, :class =>'list-group-item')%>
    <%= link_to('Artist', {}, :class =>'list-group-item')%>
    <%= link_to('Instructor', {}, :class =>'list-group-item')%>
    <%= link_to('DJ', {}, :class =>'list-group-item')%>
    <%= link_to('Team Manager', {}, :class =>'list-group-item')%>
    <%= link_to('Vendor', {}, :class =>'list-group-item')%>
</div>

<div class="row">
  <div class="well col-md-7">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.label(:is_promoter, 'Event Promoter') %>
      <%= f.check_box :is_promoter %>
      
      <%= f.label(:is_dancer, 'Dancer') %>
      <%= f.check_box :is_dancer %>
      
      <%= f.label(:is_performer, 'Performer') %>
      <%= f.check_box :is_performer %>
      
      <%= f.label( :is_dj, 'DJ') %>
      <%= f.check_box :is_dj %>

      <%= f.label(:is_instructor, 'Instructor') %>
      <%= f.check_box :is_instructor %>

      <%= f.label(:is_team_mananger, 'Team Manager') %>
      <%= f.check_box :is_team_manager %>

      <%= f.label(:is_vendor, 'Vendor') %>
      <%= f.check_box :is_vendor %>
      
</br>
</br>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>

