<!--Header-->

<div class='pt50'>
	<h3 class='anw anx ml20'>Orders</h3>
<!--Order Table in the user view--> 
<hr>  
<div class="tbo">
 <div class="table-responsive">         
  <table class="table table-hover">
    <thead>
      <tr>
      	<th>Invoice #</th>
      	<th>Event_Name</th>
      	<th>Ticket</th>
        <th>Attendee Name</th>
      </tr>
    </thead>
    <tbody>
      <% if @user.orders.any? %>
        <% @user.orders.each do |order|%>
          <% order.entitlements.each do |ordered_ticket| %>
            <tr>
            	<td><%= order.id %></td>
            	<td><%= ordered_ticket.ticket.event.event_name %></td>
              <td><%= ordered_ticket.ticket.ticket_name %></td>
              <td><%= "#{ordered_ticket.first_name} #{ordered_ticket.last_name}" %></td>
            </tr>
          <% end %>
        <% end %>
      <% end %>
      <tr>
      	<td><%= link_to('order_id', {}) %></td>
      	<td>event_name</td>
        <td>ticket_name </td>
        <td>first_name, last_name</td>
      </tr>
    </tbody>
  </table>
</div>
</div>

