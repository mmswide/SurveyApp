<!--Header-->
<div class='pt50'>
	<h3 class='anw anx ml20'>Orders</h3>
<!--Order Table in the user view--> 
<hr>  
<%if @user.orders.any? %>

<div class="tbo">
 <div class="table-responsive">         
  <table class="table table-hover">
    <thead>
      <tr>
      	<th>Invoice #</th>
      	<th>Event_Name</th>
      	<th>Ticket</th>
        <th>Attendee Name</th>
      </tr>
    </thead>
    <tbody>
      <% if @user.orders.any? %>
        <% @user.orders.each do |order|%>
          <% order.entitlements.each do |ordered_ticket| %>
            <tr>
            	<td><%= order.id %></td>
              <td><%= ordered_ticket.ticket.ticket_name %></td>
              <td><%= "#{ordered_ticket.first_name} #{ordered_ticket.last_name}" %></td>
            </tr>
          <% end %>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
</div>
<% else %>

<div class="col-md-12 tbo">
  <center>
    <h3>“For the love of dance.”</h3>
  </br> <p>—A dancer</p>
    <%= link_to('Find a Festival', root_path , :class =>'btn btn-primary event-button')%></center>
  </div>
<% end %>
