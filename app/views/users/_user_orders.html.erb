<!--FInd me at users/user_orders.html.erb -->
<!--Header-->

<div class='pt50'>
	<h3 class='anw anx ml20'>Orders</h3>
<!--Order Table in the user view--> 
<hr>  
<div class="tbo">
 <div class="table-responsive">         
  <table class="table table-hover">
    <thead>
      <tr>
      	<th>Invoice #</th>
      	<th>Event_Name</th>
      	<th>Ticket</th>
        <th>Attendee Name</th>
      </tr>
    </thead>
    <tbody>
      <% @user.orders.each do |order|%>
        <% order.order_tickets.each do |ordered_ticket| %>
          <tr>
          	<td><%= order.id %></td>
          	<td><%= ordered_ticket.ticket.event.event_name %></td>
            <td><%= ordered_ticket.ticket.ticket_name %></td>
            <td><%= "#{ordered_ticket.first_name} #{ordered_ticket.last_name}" %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
</div>

