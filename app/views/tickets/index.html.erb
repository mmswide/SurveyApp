<%= link_to('<< back to event list',  { :controller => 'events', :action => 'index'} , :class => '')%>

<h1><%= @event.event_name %></h1>

<%= render(:partial => 'shared/ticket_nav') %>
<%= link_to('Create Ticket',  {:action => 'new', :event_id => @event.id} , :class => 'btn btn-primary')%> 

<hr>
</br>

<% if @tickets.present? %>
	<div class="well col-md-8">
		<% @tickets.each do |ticket| %>
			Ticket Name : <%= ticket.ticket_name %></br>
			Ticket Price : <%= number_to_currency(ticket.ticket_price) %></br>
			Ticket Description : <%= ticket.ticket_decription %> <br>
			
			<%= link_to('edit', {:action => 'edit', :id => ticket.id, :event_id => @event.id}, :class => '')%>
			<%= link_to('delete', {:action => 'delete', :id => ticket.id, :event_id => @event.id}, :class => '')%> <br><hr>
		<% end %>
	</div>	
<% else %>
	<div class="well col-md-8">
		<p>Click the "Create Ticket" button to create your first ticket!</p>
	</div>
<% end %>



