<!--Title of the event-->
<% provide(:title, "Event Details") %>

<div class ='container col-md-12'>
  <div class="list-group col-md-3 pt100">
  	<%= link_to('event dashboard', {}, :class =>'tq')%>
    <%= link_to('Overview', {}, :class =>'list-group-item active')%>
    <%= link_to('Create Festival', {:action => 'new'}, :class =>'list-group-item')%>
    <%= link_to('Stats', {}, :class =>'tq')%>
    <%= link_to('Attendees', {}, :class =>'list-group-item')%>
    <%= link_to('Revenue', {}, :class =>'list-group-item')%>
    <%= link_to('Other', {}, :class =>'tq')%>
    <%= link_to('Bank information', {}, :class =>'list-group-item')%>
    <%= link_to('Settings', {}, :class =>'list-group-item')%>
 </div>   

<div class='pt50'>
<h3 class='anw anx'>Festival Overview</h3>
<hr>
</div>

<!--Checking in the events are empty-->
<% if @events.empty? %>
	<div class="well col-md-8">
		<h2>Thank you for registering for DanceFest!</h2>
 		<center><%= link_to('Create Festival', {:action => 'new'}, :class =>'ce apn ame')%> </center>
	</div>
<% else %>
	<div class="well col-md-8">
		<% @events.each do |event| %>
		<h4><%= event.event_name %></br></h4>

	<!--Checking if the user has permission to update link if not remove link-->	
		<% if can? :update, event %>			
		<%= link_to('Edit Event', {:action => 'show', :id => event.id})%> |
		<% end %>

		<%= link_to('View Event', {:controller => 'public', :action => 'show', :event_url => event.event_url})%> 

	<!--Checking if the user has permission to create tickets link if not remove link-->	
		<% if can? :update, event %>
		| <%= link_to('Create Tickets', {:controller => 'tickets', :action => 'new', :event_id => event.id})%> 
		<% end %>


	<!--Checking if the user has permission to delete the event. Ff not remove link-->
		<% if can? :destroy, event %>
		<%= link_to('delete', {:action => 'delete', :id => event.id}, :class => 'pull-right')%> <br>
		<% end %>
		<hr>

		<% end %>
	</div>
<% end %>


