<h1>My Festivals</h1>
<%= link_to('Create Festival', {:action => 'new'} , :class => 'btn btn-primary col-md-offset-2')%> <br><br>

<% if @events.empty? %>
	<div class="well col-md-8 col-md-offset-2">
		<p>Click the "Create Event" button to create your first Event!</p>
	</div>
<% else %>
	<div class="well col-md-8 col-md-offset-2">
		<% @events.each do |event| %>
		<h4><%= event.event_name %> </br> </h4>			
		<%= link_to('Edit', {:action => 'show', :id => event.id})%>
		| <%= link_to('View Event', {:controller => 'public', :action => 'show', :event_url => event.event_url})%> 
		<%= link_to('delete', {:action => 'delete', :id => event.id}, :class => 'pull-right')%> <br>
		<hr>
		<% end %>
	</div>
<% end %>


