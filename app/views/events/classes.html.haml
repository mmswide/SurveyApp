- provide(:title, "Classes")
.col-md-7.col-lg-offset-1
  - @event.days.each do |day|
    %h2= day.name
    - day.rooms.each do |room|
      %h3= room.name
      %br/
      - room.workshops.each do |workshop|
        %h5= workshop.title
        %li= workshop.time.strftime(" %I:%M%p")
        %li= workshop.instructor
        %li= workshop.level
        %li= workshop.location
        %li= workshop.category
