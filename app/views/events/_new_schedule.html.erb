<div class='col-md-8 col-md-offset-2'>
<%= form_for @event, remote: true, html: { class: 'form-inline' } do |f| %>
  <h3>Create schedule</h3>
  <div class='row'>
      <%= link_to_add_association 'Add a day', f, :days, class: 'btn btn-default btn-lg pull-right' %>
  </div>
</br>
  <div id='days'>
    <%= f.fields_for :days do |day| %>
      <%= render 'day_fields', f: day %>
    <% end %>
  </div>
  <div class="button-group">
    <%= f.submit 'Save changes', class: 'btn btn-primary' %>
  </div>
<% end %>
</div>