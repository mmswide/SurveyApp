<% provide(:title, "Event Details") %>

<div class="btn-group pt25" role="group" aria-label="...">
 <%= link_to('<< Back to Event List',  {:action => 'index'} , :class => 'btn btn-primary')%>
 <%= link_to('View Event Profile >>', {:controller => 'public', :action => 'show', :event_url => @event.event_url}, :class => 'btn btn-success')%>
 </div>


<h1> <%= @event.event_name %> </h1>

<!-- Event dashboard navigation-->
<%= render(:partial => 'shared/event_nav') %>

	<div class="well col-md-8">
		<!--Basic Event Information-->
		 <%= image_tag(@event.main_image.url, :class => "img-responsive") %>
		<h4>Basic Details</h4>
		<p>Event Name: <%= @event.event_name %> </p>
		<p>Event ID: <%= @event.id %> </p>
		<p>Quick Description: <%= @event.description_short %> </p>
		<br>

		<!--Contact Information-->
		<h4>Contact</h4>
		<p>Contact Name: <%= @event.contact_name %> </p>
		<p>Contact Phone: <%= number_to_phone(@event.contact_phone, area_code: true) %> </p>
		<p>Event Email: <%= @event.contact_email %> </p>
		<br>
		<!--Location Information-->
		<h4>Location</h4>
		<p>Venue Name: <%= @event.venue_name %></p>
		<p>Venue Address: <%= @event.address_1 %></p>
		<p>Venue City: <%= @event.city %></p>
		<p>State, Zipcode: <%= @event.state %> , <%= @event.zip_code %></p>

		<h4>Details</h4>
		<p>Detailed Description: <%= @event.description_long %> </p>
	</div>
</div>

