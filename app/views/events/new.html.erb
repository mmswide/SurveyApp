<% provide(:title, "New Event") %>

<%= link_to('<< back to event list',  {:action => 'index'} , :class => '')%>

<h1>New Festival</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:event, :url => {:action => 'create'}) do |f| %>
    <!--This template is shared by the new and create action-->
    <%= render(:partial => 'shared/event_form', :locals => {:f => f}) %>
    <%= submit_tag("Create Event", class: "btn btn-primary") %>
    <% end %>
  </div>
</div>

