<% provide(:title, "New Event") %>
<div class="page-inner">
  <div class="page-title">
    <h3 class="breadcrumb-header">
      <%= current_user.first_name %>
    </h3>
    <div class="page-breadcrumb">
      <ol class="breadcrumb breadcrumb-with-header">
        <li>
          <a href="index.html">Home</a>
        </li>
        <li class="active">Events</li>
      </ol>
    </div>
  </div>
  <div id="main-wrapper">
    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-white">
          <div class="panel-heading clearfix">
            <h4 class="panel-title">Details</h4>
          </div>
          <div class="panel-body">
            <form class="form-horizontal">
              <%= form_for :event, :url => {:action => 'create'} do |f| %>
                <div class="form-group">
                  <label class="col-sm-2 control-label" for="input-help-block">Event Name</label>
                  <div class="col-md-6 col-md-offset-2">
                    <%= f.text_field :event_name, class: "form-control",  label: false %>
                    <p class="help-block">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut.</p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-2 control-label" for="input-help-block">Subtitle</label>
                  <div class="col-md-6 col-md-offset-2">
                    <%= f.text_field :description_short, class: "form-control", label: false %>
                    <p class="help-block">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut.</p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-2 control-label" for="input-help-block">Event Description</label>
                  <div class="col-md-6 col-md-offset-2">
                    <%= f.text_field :description_long, class: "form-control", label: false %>
                    <p class="help-block">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut.</p>
                  </div>
                </div>
            </form>
          </div>
        </div>
      </div>
      <div class="col-md-12">
        <div class="panel panel-white">
          <div class="panel-heading clearfix">
            <h4 class="panel-title">Location</h4>
          </div>
          <div class="panel-body">
            <form class="form-horizontal">
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-help-block">Address</label>
                <div class="col-md-6 col-md-offset-2">
                  <%= f.text_field :address_1, class: "form-control",  label: false %>
                  <p class="help-block">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut.</p>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-help-block">City</label>
                <div class="col-md-6 col-md-offset-2">
                  <%= f.text_field :city, class: "form-control", label: false %>
                  <p class="help-block">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut.</p>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-help-block">State</label>
                <div class="col-md-6 col-md-offset-2">
                  <%= f.text_field :state, class: "form-control", label: false %>
                  <p class="help-block">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut.</p>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-help-block">Zip Code</label>
                <div class="col-md-6 col-md-offset-2">
                  <%= f.text_field :zip_code, class: "form-control", label: false %>
                  <p class="help-block">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut.</p>
                </div>
              </div>
            </form>
          </div>
        </div>
        <div class="col-md-12">
          <div class="panel panel-white">
            <div class="panel-heading clearfix">
              <h4 class="panel-title">SEO</h4>
            </div>
            <div class="panel-body">
              <form class="form-horizontal">
                <div class="form-group">
                  <label class="col-sm-2 control-label">URL</label>
                  <div class="col-md-6 col-md-offset-2">
                    <div class="input-group m-b-sm">
                      <span class="input-group-addon" id="basic-addon1">/events/</span>
                      <%= f.text_field :event_url, class: "form-control", label: false %>
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-2 control-label" for="input-help-block">Meta Description</label>
                  <div class="col-md-6 col-md-offset-2">
                    <input class="form-control" id="input-Default" type="text"></input>
                    <p class="help-block">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut.</p>
                  </div>
                </div>
                <%= submit_tag("Create Event", class: "btn btn-primary pull-right") %>
                <% end %>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



