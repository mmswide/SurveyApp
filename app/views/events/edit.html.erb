<% provide(:title, "Edit Event") %>

<div class="btn-group pt25" role="group" aria-label="...">
 <%= link_to('<< Back to Event List',  {:action => 'index'} , :class => 'btn btn-primary')%>
 <%= link_to('View Event Profile >>', {:controller => 'public', :action => 'show', :event_url => @event.event_url}, :class => 'btn btn-success')%>
</div>

<h1><%= @event.event_name %></h1>

<%= render(:partial => 'shared/event_nav') %>

<div class="row">
  <div class="well col-md-7">
    <!--Rendering shared error template-->
    <%= render 'shared/event_error_messages' %>
    <!--Edit Basic Information-->
    <center><h3>Edit Basic Information</h3></center>
    <%= form_for(:event, :url => {:action => 'update', :id => @event.id})do |f| %>

      <%= f.label :event_name %>
      <%= f.text_field :event_name, class: 'form-control' %>

      <%= f.label :event_url %>
      <%= f.text_field :event_url, class: 'form-control' %>

     <%= label_tag(:description_short, 'Quick Description') %>
      <%= f.text_area(:description_short, class: 'form-control', rows: '3') %>

      <!--Edit Contact Information-->
      <center><h3>Edit Contact Information</h3></center>

      <%= f.label :contact_name %>
      <%= f.text_field :contact_name, class: 'form-control' %>

      <%= f.label :contact_phone %>
      <%= f.text_field :contact_phone, class: 'form-control' %>

       <%= f.label :contact_email %>
      <%= f.text_field :contact_email, class: 'form-control' %>
      
      <!--Edit Venue Information-->
      <center><h3>Edit Venue Information</h3></center>

      <%= f.label :venue_name %>
      <%= f.text_field :venue_name, class: 'form-control' %>

      <%= f.label :address_1 %>
      <%= f.text_field :address_1, class: 'form-control' %>

       <%= f.label :city %>
      <%= f.text_field :city, class: 'form-control' %>

      <%= f.label :state %>
      <%= f.text_field :state, class: 'form-control' %>

       <%= f.label :zip_code %>
      <%= f.text_field :zip_code, class: 'form-control' %>

      <%= label_tag(:description_long, 'Detailed Description') %>
      <%= f.text_area(:description_long, class: 'form-control', rows: '6') %>

      <%= submit_tag("Edit Event", class: "btn btn-primary") %>
    <% end %>
  </div>
</div>
