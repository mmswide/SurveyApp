<div class='nested-fields'>
  <div class="form-group">
    <%= f.text_field :name, class: 'form-control', placeholder: "Day name" %>
  </div>
  <div class="form-group">
    <div class="col-xs-2">
      <%= f.text_field :date, class: 'form-control my-datepicker', placeholder: "Date" %>
    </div>
  </div>
  <div class="btn-group">
    <%= link_to_remove_association "- Remove Day", f, class: 'btn btn-danger btn-sm' %>
    <%= f.submit 'Save changes', class: 'btn btn-success btn-sm' %>
  </div>

</div>