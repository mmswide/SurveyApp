<div class="w-section section hero">
	<div class="w-container">
		<h1 class="hero-heading">DanceFest.io</h1>
		<p class="hero-subhead">Dedicated to the dancers of the world. For the love of dance.</p>
    </div>
    <!--event section-->
    <div class='row pt150'>
		<div class="col-md-10 col-md-offset-1 event-box">
		<!--event boxes-->
		<% @events.each do |event| %>		
			<div class = 'col-md-3 col-lg-offset-1 event-thumb'>
				<img class='img-responsive' src="http://placehold.it/350x350">
				<%= link_to(event.event_name, {:controller => 'public', 
					:action => 'show', :event_url => event.event_url}) %> 
			</div>	
		<% end %>
		</div>
	</div>
	<!--end of event boxes-->
	<!--The Lounge Promotion-->
	<div class='row' style='height:500px; background-color:#f7fafa;'>
		<div class='col-md-8 pt150 col-md-offset-2' style='height:323px;'>
			<div class='col-md-7' style='height:285px;  background-color: #ffebf2;'>
			<h2 class='lounge-heading'><div class='brand'> DanceFest.io </div> is a vibrant community of people working together to bring dance to life. </h2>
			</div>
			<div class=' col-md-5' style='height:285px; background-color:white;'>
				<%= link_to('The Lounge', lounge_path , :class =>'btn btn-primary lounge-btn')%>
				<h5 class="">
					View the best dance videos...
				</h5>
			</div>
		</div>
 	</div>
</div>



