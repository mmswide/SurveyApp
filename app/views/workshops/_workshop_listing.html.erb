<div class="content">
  <table class="table table-striped">
    <thead>
      <tr>
        <th class="col-md-2">
          <%= smart_listing.sortable "Title", "title" %>
        </th>
        <th class="col-md-2">
          <%= smart_listing.sortable "Time", "time" %>
        </th>
        <th class="col-md-2">
          <%= smart_listing.sortable "Instructor", "instructor" %>
        </th>
        <th class="col-md-2">
          <%= smart_listing.sortable "Level", "level" %>
        </th>
        <th class="col-md-2">
          <%= smart_listing.sortable "Location", "location" %>
        </th>
        <th class="col-md-2">
          <%= smart_listing.sortable "Category", "category" %>
        </th>
        <th></th>
      </tr>
    </thead>
    <tbody class="sorted_table">
      <% smart_listing.collection.each do |workshop| %>
        <tr class="editable" data-id=<%= "#{workshop.id}" %>>
          <%= smart_listing.render partial: 'workshop', object: @workshop = workshop %>
        </tr>
      <% end %>
    </tbody>
    <%= smart_listing.item_new colspan: 7, link: new_room_workshop_path  %>
  </table>
  <div class="text-center">
    <%= smart_listing.paginate %>
  </div>
</div>
