<td style="width: 90px; height: 25px">
  <%= link_to "#{@room.name}", room_workshops_path(@room) %>
</td>
<td class="actions">
  <%= smart_listing_item_actions [{ name: :edit, url: edit_room_path(@room) }, 
    { name: :destroy, url: room_path(@room) , confirmation: "Are you sure you want to delete this?" }] %>
  <%= link_to room_workshops_path(@room) do %>
    <span style="font-size:1em;" class="glyphicon glyphicon-list-alt" data-toggle="tooltip" title="Manage workshops"></span>
  <% end %>
</td>

