!!!
%html{:lang => "en"}
  %head
    / Title
    %title
      = full_title(yield(:title))
    = csrf_meta_tags 
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %meta{:charset => "UTF-8"}/
    %meta{:content => "Admin Dashboard Template", :name => "description"}/
    %meta{:content => "admin,dashboard", :name => "keywords"}/
    %meta{:content => "stacks", :name => "author"}/
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true 
    / HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
    / WARNING: Respond.js doesn't work if you view the page via file://
    /[if lt IE 9]
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  %body.compact-menu
    .overlay
    %nav#cbp-spmenu-s1.cbp-spmenu.cbp-spmenu-vertical.cbp-spmenu-right
      = render 'layouts/cbp_spmenu_s1'
    %nav#cbp-spmenu-s2.cbp-spmenu.cbp-spmenu-vertical.cbp-spmenu-right
      = render 'layouts/cbp_spmenu_s2'
    %form.search-form{:action => "#", :method => "GET"}
      .input-group
        %input.form-control.search-input{:name => "search", :placeholder => "Type something...", :type => "text"}/
        %span.input-group-btn
          %button.btn.btn-default.close-search{:type => "button"}
            %i.icon-close
      / Input Group
    / Search Form
    %main.page-content.content-wrap
      .navbar
        = render 'layouts/navbar'  
      .page-sidebar.sidebar
        = render 'layouts/sidebar'  
      .page-inner
        #main-wrapper
          .row
            = yield  
        / Main Wrapper
        .page-footer
          
      / Page Inner
    / Page Content
    %nav#cd-nav.cd-nav-container
      = render 'layouts/cd_nav'
    .cd-overlay
      
